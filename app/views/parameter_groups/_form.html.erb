<%= form_for(@parameter_group, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @parameter_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@parameter_group.errors.count, "error") %> prohibited this parameter_group from being saved:</h2>

      <ul>
      <% @parameter_group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :name, :class => "col-xs-2 control-label" %>
        <div class="col-xs-7">
          <%= f.text_field :name, :class => "form-control" %>
        </div>
        <%= f.label :pgn, "PGN", :class => "col-xs-1 control-label" %>
        <div class="col-xs-2">
          <%= f.number_field :pgn, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.text_area :description, :class => "form-control", :rows => 10 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :priority, :class => "col-xs-2 control-label" %>
        <div class="col-xs-2">
          <%= f.number_field :priority, :class => "form-control" %>
        </div>
        <%= f.label :default_rate, "Default Rate (ms)", :class => "col-xs-2 control-label" %>
        <div class="col-xs-2">
          <%= f.number_field :default_rate, :class => "form-control" %>
        </div>
        <%= f.label :database_version, "NMEA Database Version", :class => "col-xs-2 control-label" %>
        <div class="col-xs-2">
          <%= f.number_field :database_version, :class => "form-control", :step => "any" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pgn_category_id, "Category", :class => "col-xs-2 control-label" %>
        <div class="col-xs-4">
          <%= f.collection_select :pgn_category_id, PgnCategory.all, :id, :name_with_desc, {prompt: true}, {:class => "form-control"} %>
        </div>
        <%= f.label :pgn_type_id, "Type", :class => "col-xs-1 control-label" %>
        <div class="col-xs-5">
          <%= f.collection_select :pgn_type_id, PgnType.all, :id, :name_with_desc, {prompt: true}, {:class => "form-control"} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :size, :class => "col-xs-2 control-label" %>
        <div class="col-xs-2">
          <%= f.number_field :size, :class => "form-control" %>
        </div>
        <%= f.label :repeating_fields, "Number of Repeating Fields", :class => "col-xs-3 control-label" %>
        <div class="col-xs-2">
          <%= f.number_field :repeating_fields, :class => "form-control" %>
        </div>
        <div class="checkbox">
          <%= f.label :is_known, :class => "col-xs-2 control-label col-xs-offset-1" do %>
            <%= f.check_box :is_known %>
            Is Known
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="fields">
    <div class="row form-group">
      <div class="col-xs-3 col-xs-offset-8">
        <label id="fn">Field Name</label>
      </div>
    </div>
    <%= f.fields_for(:parameter_group_fields) do |pf| %>
      <%= render 'parameter_group_field_fields', :f => pf %>
    <% end %>
    <div class="row">
      <div class="links col-xs-offset-11 col-xs-1">
        <%= link_to_add_association 'Add Field', f, :parameter_group_fields, :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= f.submit "Save", :class => "btn btn-success" %>
    </div>
  </div>
<% end %>

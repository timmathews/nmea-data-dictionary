<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-8">
            <h3 class="panel-title"><%= @field.name %></h3>
          </div>
          <div class="col-xs-4 text-right">
            <%= link_to 'Edit', edit_field_path(@field) %> |
            <%= link_to 'Back', fields_path %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-3">
            <strong>Type:</strong> <%= @field.field_type.name unless @field.field_type.nil? %>
          </div>
          <div class="col-xs-3">
            <strong>Units:</strong> <%= @field.field_unit.name unless @field.field_unit.nil? %>
          </div>
          <div class="col-xs-3">
            <strong>Scaling:</strong> <%= @field.scaling %>
          </div>
          <div class="col-xs-3">
            <strong>Offset:</strong> <%= @field.offset %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3">
            <strong>Value:</strong> <%= @field.min_value_typed %> &ndash; <%= @field.max_value_typed %>
          </div>
          <div class="col-xs-3">
            <strong>Length:</strong> <%= @field.length %>
          </div>
          <div class="col-xs-6">
            <strong>Signalk Path:</strong> <%= @field.signalk_path %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <p>
            <strong>Description:</strong>
            <%= markdown @field.description %>
            </p>
          </div>
          <% if @field.field_enumerators.count > 0 %>
          <div class="col-xs-6">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">Enumeration Values</h4>
              </div>
              <table class="table table-condensed table-striped">
                <thead>
                  <tr>
                    <th>Value</th>
                    <th>Descriptor</th>
                  </tr>
                </thead>
                <tbody>
                  <% @field.field_enumerators.order(:value).each do |e| %>
                    <tr>
                      <td><%= e.value %></td>
                      <td><%= e.name %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

